<!DOCTYPE html>
<html>
  <head>
    <title>Cardinal</title>
    <%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>	
  	 <nav class="navbar navbar-inverse navbar-fixed-top">
		  <div class="container">
		    <ul class="nav navbar-nav navbar-right">
		    	<% if flash[:notice] %>
			      <li class="notification" style="padding-top:15px;color:#5cb85c;"><strong>Success!</strong> <%= flash[:notice] %></li>
			    <% elsif flash[:error] %>
			        <li class="notification" style="padding-top:15px;color:#d9534f"><strong>Error!</strong> <%= flash[:error] %></li>
			      </div>
			    <% else %>
			    	<li class="notification" style="padding-top:15px;color:#5cb85c;"></li>
			    <% end %>
			    <% if current_page?('/main_menu/index') %>
		      	<li><%= link_to 'Logout', login_destroy_path, method: :delete %></li>
		      <% end %>
		    </ul>
		  </div>
		</nav>
  	<div class="container" style="margin-top:50px;">
	  </div>
	  
	  <%= yield %>

	  <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title">Print New Tag?</h4>
		        <p class="text-muted">Do you want to print a new tag?</p>
		        <div id="printTagNum" class="hidden"></div>
		        <div class="col-sm-6 col-md-6">
		        <%= link_to 'Yes, Please!', "#", remote: true, class: "btn btn-block btn-success printYes" %>
		        </div>
		        <div class="col-sm-6 col-md-6">
		        <%= link_to 'No Thanks!', "#", remote:true, class: "btn btn-block btn-danger printNo" %>
		        </div>
		      </div>
		    </div><!-- /.modal-content -->
		  </div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
  </body>
</html>
