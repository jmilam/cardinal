//$('.function-notification').html("<%= escape_javascript render(partial: 'alert_area') %>")
$('.custom-text-field').val( '')

if ($('.function-header').text().match(/[^()]+/g)[0].trim() == "BKF") {
  $('#function_product_line').children('option:gt(0)').remove();
} else {
  $('.form-fields').children().remove()
  $('.submit').addClass('hidden')
  $('.next-function').removeClass('hidden')
  $('.submit').prop('disabled', false)
}

if ($('.function-header').text().match(/[^()]+/g)[0].trim() == "PLO"){
	$('#function_tag_number').parent().removeClass('col-md-12')
	$('#function_tag_number').parent().addClass('col-md-6')
	$('.new_tag').removeClass('hidden')
} else {
	$('#function_tag_number').parent().removeClass('col-md-6')
	$('#function_tag_number').parent().addClass('col-md-12')
}

if ("<%= @success %>"){
  $('.notification').text("Successful! <%=@function_type %> transaction complete.")
  if ("<%= @function_type %>" == "PCT"){
   	$('#myModal').modal('show')
  } else if ("<%= @function_type %>" == "PLO"){
  	$('#myModal').modal('show');
  }
}
else {
  $('.notification').text("Error!")
}
setTimeout(function(){
	$('.notification').text('')
}, 5000);

$('#spin').data('spinner').stop();